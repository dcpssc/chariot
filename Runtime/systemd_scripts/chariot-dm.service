[Unit]
Description=Provides CHARIOT deployment manager service, which is a service responsible for receiving configuration commands from the CHARIOT management engine and executing those commands locally.
After=chariot-nm.service
Requires=chariot-nm.service

[Service]
#EnvironmentFile=-/etc/chariot/chariot.conf
Environment=APP_HOME=/home/riaps/riaps_apps
ExecStart=/usr/local/bin/chariot-dm -c /etc/chariot/chariot.conf
KillMode=control-group
Restart=on-failure
RestartSec=5100ms

[Install]
WantedBy=multi-user.target